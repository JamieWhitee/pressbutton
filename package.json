{
  "name": "pressbutton-monorepo",
  "version": "1.0.0",
  "description": "PressButton - 道德选择游戏平台 (Instagram风格设计)",
  "private": true,
  "scripts": {
    "setup": "node scripts/setup-env.js",
    "setup:env": "node scripts/setup-env.js",
    "setup:deps": "npm run install:all",

    "install:all": "npm run install:api && npm run install:web",
    "install:api": "cd pressbutton-api && npm install",
    "install:web": "cd pressbutton-web && npm install",

    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd pressbutton-api && npm run start:dev",
    "dev:web": "cd pressbutton-web && npm run dev",

    "build": "npm run build:api && npm run build:web",
    "build:api": "cd pressbutton-api && npm run build",
    "build:web": "cd pressbutton-web && npm run build",

    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:down": "docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.prod.yml down",

    "test": "npm run test:api && npm run test:web",
    "test:api": "cd pressbutton-api && npm test",
    "test:web": "cd pressbutton-web && npm test",

    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "cd pressbutton-api && npm run lint",
    "lint:web": "cd pressbutton-web && npm run lint",
    "lint:fix": "npm run lint:fix:api && npm run lint:fix:web",
    "lint:fix:api": "cd pressbutton-api && npm run lint --fix",
    "lint:fix:web": "cd pressbutton-web && npm run lint:fix",

    "clean": "npm run clean:deps && npm run clean:build",
    "clean:deps": "rm -rf node_modules pressbutton-*/node_modules",
    "clean:build": "rm -rf pressbutton-*/dist pressbutton-*/.next"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "pressbutton",
    "moral-dilemma",
    "gaming",
    "nextjs",
    "nestjs",
    "postgresql",
    "docker"
  ],
  "author": "PressButton Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
